# Copy this file to .env and fill in your actual values

# REQUIRED: Database connection from Neon
DATABASE_URL="postgresql://username:password@hostname/database?sslmode=require"

# REQUIRED: Generate with: openssl rand -base64 32
AUTH_SECRET="your-32-character-secret-here"

# REQUIRED: Your website URL (will be provided by Vercel)
AUTH_URL="https://your-app-name.vercel.app"
NEXT_PUBLIC_APP_URL="https://your-app-name.vercel.app"

# OPTIONAL: Google OAuth (for login with Google)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# OPTIONAL: AWS S3 (for storing recipe images)
S3_REGION=""
S3_BUCKET=""
S3_ACCESS_KEY_ID=""
S3_SECRET_ACCESS_KEY=""